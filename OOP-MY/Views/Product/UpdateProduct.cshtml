@model OOP_MY.Entities.Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_OopLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<h1>Ürün Ekleme Sayfası</h1>

<form method="post">

    @Html.HiddenFor(x=>x.Id)

    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Fiyat")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Stok Sayısı")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-info">Ürünü Ekle</button>
</form>